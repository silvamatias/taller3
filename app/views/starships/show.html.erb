

<div class="jumbotron">
  <div class="container">

		<div class="caption">
		<h3><b>STARSHIP</b><h3>
		</div>
		<p><b>Name:</b> <%= @starship.name %></p>
		<p><b>Model:</b> <%= @starship.model %></p>
		<p><b>Starship class:</b> <%= @starship.starship_class %></p>
		<p><b>Manufacturers:</b> <% @starship.manufacturers.each do |manufacturer| %>
                          <%= manufacturer %>.
                          <% end %></p>
		<p><b>Cost in credits:</b> <%= @starship.cost_in_credits %></p>
		<p><b>Length:</b> <%= @starship.length %></p>
		<p><b>Crew:</b> <%= @starship.crew %></p>
		<p><b>Passengers:</b> <%= @starship.passengers %></p>
		<p><b>Max speed:</b> <%= @starship.max_atmosphering_speed %></p>
		<p><b>Hyperdrive rating:</b> <%= @starship.hyperdrive_rating %></p>
		<p><b>Cargo capacity:</b> <%= @starship.cargo_capacity %></p>
		<p><b>Consumables: <%= @starship.consumables %></p>

		<p><b>Films:</b> <% @films.each do |film| %>
					-<a href="/films/<%= film.id%>"><%= film.title %></a>
						<% end %>
		</p>

		<p><b>Pilots:</b> <% @characters.each do |char| %>
					-<a href="/characters/<%= char.id%>"><%= char.name %></a>
						<% end %>
		</p>




  </div>
</div>