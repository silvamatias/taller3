


<div class="jumbotron">
  <div class="container">

		<div class="caption">
		<h3><b>FILM</b><h3>
		</div>
		<p><b>Title:</b> <%= @film.title %></p>
		<p><b>Episode number:</b> <%= @film.episode_id %></p>
		<p><b>Opening crawl:</b> <%= @film.opening_crawl %></p>
		<p><b>Director:</b> <%= @film.director %></p>
		<p><b>Producers:</b> <% @film.producers.each do |producer| %>
                          <%= producer %>.
                          <% end %></p>
		<p><b>Release date:</b> <%= @film.release_date %></p>


		<p><b>Starships:</b> <% @starships.each do |starship| %>
					-<a href="/starships/<%= starship.id%>"><%= starship.name %></a>
						<% end %>
		</p>


		<p><b>Characters:</b> <% @characters.each do |char| %>
					-<a href="/characters/<%= char.id%>"><%= char.name %></a>
						<% end %>
		</p>


		<p><b>Planets:</b> <% @planets.each do |planet| %>
					-<a href="/planets/<%= planet.id%>"><%= planet.name %></a>
						<% end %>
		</p>


		



  </div>
</div>



